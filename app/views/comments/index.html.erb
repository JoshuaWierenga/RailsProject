<% comments = true %>

<script type="text/javascript">headerchange('commentslink');</script>

<h1>Listing Comments</h1>

<table>
  <thead>
    <tr>
      <th>Comments:</th>
      <th> - </th>
      <th>Time:</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.message %></td>
        <td> - </td>
        <td><%= comment.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<% if comments == true then %>
    <%= link_to 'New Comment', new_comment_path %>
<% else %>
    <p>Comments Disabled</p>
<% end %>
