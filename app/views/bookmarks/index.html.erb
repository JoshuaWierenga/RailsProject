<span style="float:right"><%= link_to 'Go to Comments', comments_path %> <br> <%= link_to 'Return to homepage', root_path %></span>

<h2>Welcome to my site, current time is <span id='ct' ></span> <%= Time.now.strftime("%P") %></h2>
<script type="text/javascript">display_ct();</script>

<p id="notice"><%= notice %></p>
<h1>Listing Bookmarks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.title %></td>
        <td><a href=<%=bookmark.url%>><%= bookmark.url %></a></td>
        <td><%= link_to 'Show', bookmark %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bookmark', new_bookmark_path %>
